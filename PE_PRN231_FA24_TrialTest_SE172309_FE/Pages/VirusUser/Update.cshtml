@page "{id}" 
@model PE_PRN231_FA24_TrialTest_SE172309_FE.Pages.VirusUser.UpdateModel

<h2>Update Person Information</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<form method="post">
    <input type="hidden" asp-for="UpdatePerson.PersonId" />
    <div>
        <label asp-for="UpdatePerson.Fullname"></label>
        <input asp-for="UpdatePerson.Fullname" />
        <span asp-validation-for="UpdatePerson.Fullname" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="UpdatePerson.BirthDay"></label>
        <input asp-for="UpdatePerson.BirthDay" type="date" />
        <span asp-validation-for="UpdatePerson.BirthDay" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="UpdatePerson.Phone"></label>
        <input asp-for="UpdatePerson.Phone" />
        <span asp-validation-for="UpdatePerson.Phone" class="text-danger"></span>
    </div>
    <div>
        <h4>Viruses</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Virus Name</th>
                    <th>Resistance Rate</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.UpdatePerson.Viruses.Count; i++)
                {
                    <tr>
                        <td>
                            <input asp-for="UpdatePerson.Viruses[i].VirusName" />
                            <span asp-validation-for="UpdatePerson.Viruses[i].VirusName" class="text-danger"></span>
                        </td>
                        <td>
                            <input asp-for="UpdatePerson.Viruses[i].ResistanceRate" />
                            <span asp-validation-for="UpdatePerson.Viruses[i].ResistanceRate" class="text-danger"></span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <button type="submit">Update</button>
    <button type="button" onclick="window.location='/VirusUser/Index'">Cancel</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
